<Window x:Class="LoLTainer.Windows.EditEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoLTainer.Windows"
        mc:Ignorable="d"
        Title="EditEvent" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="1">
            <StackPanel>

                <StackPanel Name="SettingsPanel">

                </StackPanel>
                <Button Name="BTNAddAction" Content="Add Action" FontSize="20" FontWeight="Bold" Click="BTNAddAction_Clicked"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
